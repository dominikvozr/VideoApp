<FrameLayout
	android:id="@+id/custom_player_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<com.google.android.exoplayer2.ui.PlayerView
		android:id="@+id/player_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:resize_mode="zoom">

	</com.google.android.exoplayer2.ui.PlayerView>

	<ProgressBar
		android:id="@+id/progress_bar"
		style="?android:attr/progressBarStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/player_view" />

	<LinearLayout
		android:id="@+id/options_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:weightSum="3">

		<View
			android:id="@+id/prev_btn"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" />

		<View
			android:id="@+id/middle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<View
			android:id="@+id/next_btn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<!--<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/options_container"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:padding="15dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">-->

		<!--<View
			android:id="@+id/prev_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<View
			android:id="@+id/next_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/text_view_account_handle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="10dp"
			android:layout_marginBottom="10dp"
			android:textColor="@color/colorStoryUserName"
			android:textSize="14sp"
			android:textStyle="bold"
			app:layout_constraintBottom_toTopOf="@+id/text_view_video_description"
			app:layout_constraintStart_toStartOf="parent"
			tools:text="Baljeet Singh" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/text_view_video_description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="10dp"
			android:layout_marginBottom="20dp"
			android:ellipsize="end"
			android:lines="5"
			android:maxLines="5"
			android:textColor="@color/colorStoryDescription"
			android:textSize="14sp"
			app:layout_constrainedHeight="true"
			app:layout_constraintBottom_toTopOf="@+id/text_view_music_title"
			app:layout_constraintStart_toStartOf="parent"
			tools:text="@tools:sample/lorem/random" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/text_view_music_title"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:ellipsize="marquee"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true"
			android:singleLine="true"
			android:textColor="@color/colorAudioTitle"
			android:textSize="14sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHeight_default="wrap"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintWidth_percent=".4" />
		&lt;!&ndash;RecyclerView.getLayoutManager().scrollToPosition(youPositionInTheAdapter)&ndash;&gt;

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/text_view_video_location"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="10dp"
			android:ellipsize="marquee"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true"
			android:singleLine="true"
			android:textColor="@color/colorAudioTitle"
			android:textSize="14sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHeight_default="wrap"
			app:layout_constraintHorizontal_bias="0"
			app:layout_constraintStart_toEndOf="@+id/text_view_music_title"
			app:layout_constraintWidth_percent=".4"
			tools:text="@tools:sample/lorem/random" />-->
		<!--RecyclerView.getLayoutManager().scrollToPosition(youPositionInTheAdapter)-->
	</LinearLayout>
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/text_view_music_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="marquee"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:marqueeRepeatLimit="marquee_forever"
		android:scrollHorizontally="true"
		android:singleLine="true"
		android:textColor="@color/colorAudioTitle"
		android:textSize="14sp" />
	<!--</androidx.constraintlayout.widget.ConstraintLayout>-->
</FrameLayout>
<!--</androidx.constraintlayout.widget.ConstraintLayout>-->
</layout>
